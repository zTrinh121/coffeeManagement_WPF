<Window x:Class="WpfApp.UpdatePriceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Drink Price" Height="200" Width="300">
    <StackPanel Margin="20">
        <Label Content="Enter new price:"/>
        <TextBox x:Name="txtNewPrice" Margin="0,10,0,10"/>
        <Button Content="Update" HorizontalAlignment="Right" Padding="10,3" Click="Update_Click"/>
    </StackPanel>
</Window>
